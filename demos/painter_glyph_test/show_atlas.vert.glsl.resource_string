vec4
fastuidraw_gl_vert_main(in uint sub_shader,
                        in uvec4 uprimary_attrib,
                        in uvec4 usecondary_attrib,
                        in uvec4 uint_attrib,
                        in uint shader_data_offset,
                        out int z_add)
{
  vec2 p;

  z_add = 0;
  p = vec2(uprimary_attrib.xy);
  show_atlas_tex_coords_x = p.x;
  show_atlas_tex_coords_y = p.y;
  show_atlas_tex_coords_layer = float(uprimary_attrib.z);

  return p.xyxy;
}
