vec4
fastuidraw_gl_frag_main(in uint sub_shader,
                        in uint shader_data_offset)
{
  uint v;
  float f;
  ivec3 coord;

  coord = ivec3(show_atlas_tex_coords_x,
                show_atlas_tex_coords_y,
                show_atlas_tex_coords_layer);

  v = texelFetch(fastuidraw_glyphTexelStoreUINT, coord, 0).r;
  f = float(v) / 255.0;
  return vec4(f, f, f, 1.0);
}
