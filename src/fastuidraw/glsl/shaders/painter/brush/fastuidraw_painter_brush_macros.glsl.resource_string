#define fastuidraw_brush_shader_has_image(shader) ((shader & uint(fastuidraw_shader_image_mask)) != 0u)
#define fastuidraw_brush_shader_has_gradient_repeat(shader) ((shader & uint(fastuidraw_shader_gradient_repeat_mask)) != 0u)
#define fastuidraw_brush_shader_has_repeat_window(shader) ((shader & uint(fastuidraw_shader_repeat_window_mask)) != 0u)
#define fastuidraw_brush_shader_has_transformation_matrix(shader) ((shader & uint(fastuidraw_shader_transformation_matrix_mask)) != 0u)
#define fastuidraw_brush_shader_has_transformation_translation(shader) ((shader & uint(fastuidraw_shader_transformation_translation_mask)) != 0u)

#define fastuidraw_brush_image_bindless_low_handle fastuidraw_brush_image_slack
#define fastuidraw_brush_image_bindless_high_handle fastuidraw_brush_image_number_index_lookups

#define fastuidraw_brush_gradient_sweep_point_x fastuidraw_brush_gradient_p0_x
#define fastuidraw_brush_gradient_sweep_point_y fastuidraw_brush_gradient_p0_y
#define fastuidraw_brush_gradient_sweep_angle fastuidraw_brush_gradient_p1_x
#define fastuidraw_brush_gradient_sweep_sign_factor fastuidraw_brush_gradient_p1_y
